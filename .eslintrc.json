{
  "extends": "standard",
  "installedESLint": true,
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "semi": ["warn", "always"],
    "comma-dangle": ["warn", "always-multiline"],
    "space-before-function-paren": ["warn", "never"],
    "spaced-comment": ["warn", "always", {
      "exceptions": ["-"]
    }]
  }
}
